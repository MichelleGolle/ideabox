<h1> <%= @idea.title %> </h1>
<p> <%= @idea.description %> </p>
<% @idea.categories.each do |category| %>
  Category: <%= category.name %>
<% end %><br>
<% @idea.images.each do |image| %>
  <img src=<%= image.url %> height="100" width="125">
<% end %><br>

<%= link_to "Edit", edit_idea_path %><br>
<%= link_to "Delete", idea_path(@idea), method: "delete"  %><br>
<%= link_to "Back to my user page", user_path(current_user) %>
